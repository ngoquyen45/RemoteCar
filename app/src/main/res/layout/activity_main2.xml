<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mhtwo"
    tools:context=".Main2Activity">

    <ImageView
        android:id="@+id/left"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="125dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/left" />

    <ImageView
        android:id="@+id/right"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/left"
        android:layout_marginEnd="40dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/right" />

    <ImageView
        android:id="@+id/up"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="98dp"
        android:layout_marginStart="75dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/up" />

    <ImageView
        android:id="@+id/down"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/up"
        android:layout_marginBottom="33dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/down" />

    <ImageView
        android:id="@+id/car"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_alignBottom="@+id/left"
        android:layout_alignParentStart="true"
        android:layout_marginStart="233dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/xe" />

    <ImageView
        android:id="@+id/sword"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/right"
        android:layout_alignTop="@+id/up"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/sword" />

    <ImageView
        android:id="@+id/led"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/left"
        android:layout_alignTop="@+id/up"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/ledon" />

    <TextView
        android:id="@+id/speed"
        android:layout_width="72dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="245dp"
        android:layout_marginTop="32dp"
        android:text="@string/speed"
        android:textColor="#FFFF00"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="@string/speed" />

</RelativeLayout>